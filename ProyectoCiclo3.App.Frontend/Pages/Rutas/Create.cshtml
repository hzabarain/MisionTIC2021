@page
@model ProyectoCiclo3.App.Frontend.Pages.FormRutaModel
@{
    var ruta = Model.Ruta;
}
<div class="text-center">
  <form method="POST">
  <label for="origen" class="form-label">Origen:</label>
  <select asp-for="@ruta.origen" class="form-control" required>
        <option value="">Seleccionar un Aeropuerto de Origen</option>
        @foreach (var aeropuerto in Model.Aeropuertos)
    {
        <option value="@aeropuerto.id">@aeropuerto.nombre - @aeropuerto.ciudad - @aeropuerto.pais</option>
    }
    </select>

  <label for="destino" class="form-label">Destino:</label>
  <select asp-for="@ruta.destino" class="form-control" required>
        <option value="">Seleccionar un Aeropuerto de Destino</option>
        @foreach (var aeropuerto in Model.Aeropuertos)
    {
        <option value="@aeropuerto.id">@aeropuerto.nombre - @aeropuerto.ciudad - @aeropuerto.pais</option>
    }
    </select>
  <label for="tiempo" class="form-label">Tiempo:</label>
  <input type="number" class="form-control" id="tiempo_estimado" name="tiempo_estimado" placeholder="Tiempo Estimado de Vuelo" required>
    <hr>
    <button type="submit" class="btn btn-success">Enviar</button>
  </form>
</div>
